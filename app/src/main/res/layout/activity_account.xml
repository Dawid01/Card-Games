<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.szczepaniak.dawid.cardgames.AccountActivity">

    <RelativeLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/AccountAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/common_google_signin_btn_icon_dark" />

        <TextView
            android:id="@+id/AccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AccountAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Account name"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/AccountEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/AccountName"
            android:layout_centerHorizontal="true"
            android:text="Account email"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp" />

        <Button
            android:id="@+id/Play"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Play" />

        <Button
            android:id="@+id/LogOut"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/Play"
            android:layout_below="@+id/Play"
            android:layout_marginTop="30dp"
            android:text="Log out" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
